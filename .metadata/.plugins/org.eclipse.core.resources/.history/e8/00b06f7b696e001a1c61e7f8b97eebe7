package other;
import java.util.*;

public class Letter_ {
	Scanner ip = new Scanner(System.in);
	String str;
	String s;
	
	public Letter_() {
		System.out.println("Enter a string:");
		str = ip.nextLine();
		str = str.toUpperCase();
		System.out.println("Enter a pattern(length-2):");
		s = ip.nextLine();
	}
	
	public void display() {
		int i;
		for(i=0;i<str.length();i++) {
			System.out.println();
			System.out.println();
			display_0(str.charAt(i));
			System.out.println();
			display_1(str.charAt(i));
			System.out.println();
			display_2(str.charAt(i));
			System.out.println();
			display_3(str.charAt(i));
			System.out.println();
			display_4(str.charAt(i));
			System.out.println();
		}
	}
	
	public void display_0(char c) {
		int j;
		for(j=0;j<5;j++) {
			if(c=='A' || c=='M' || c=='O' || c=='Q') {
				if(j==1 || j==2 || j==3)	System.out.print(String.format("%2s",s));
				else						System.out.print(String.format("%2s",""));
			}
			if(c=='B' || c=='D' || c=='P' || c=='R') {
				if(j==0 || j==1 || j==2 || j==3) 	System.out.print(String.format("%2s",s));
				else								System.out.print(String.format("%2s",""));
			}
			if(c=='C' || c=='E' || c=='F' || c=='G' || c=='S') {
				if(j==1 || j==2 || j==3 || j==4)	System.out.print(String.format("%2s",s));
				else								System.out.print(String.format("%2s",""));
			}
			if(c=='H' || c=='K' || c=='N' || c=='U' || c=='V' || c=='W' || c=='X' || c=='Y') {
				if(j==0 || j==4)	System.out.print(String.format("%2s",s));
				else				System.out.print(String.format("%2s",""));
			}
			if(c=='I' || c=='J' || c=='T' || c=='Z') {
				System.out.print(String.format("%2s",s));
			}
			if(c=='L') {
				if(j==0)	System.out.print(String.format("%2s",s));
				else		System.out.print(String.format("%2s",""));
			}
		}
	}
	
	public void display_1(char c) {
		int j;
		for(j=0;j<5;j++) {
			if(c=='A' || c=='B' || c=='D' || c=='H' || c=='O' || c=='P') {
				if(j==0 || j==4)	System.out.print(String.format("%2s",s));
				else				System.out.print(String.format("%2s",""));
			}
			if(c=='Q' || c=='R' || c=='U' || c=='V' || c=='W' || c=='Y') {
				if(j==0 || j==4)	System.out.print(String.format("%2s",s));
				else				System.out.print(String.format("%2s",""));
			}
			if(c=='C' || c=='E' || c=='F' || c=='G' || c=='L' || c=='S') {
				if(j==0)	System.out.print(String.format("%2s",s));
				else		System.out.print(String.format("%2s",""));
			}
			if(c=='I' || c=='T') {
				if(j==2)	System.out.print(String.format("%2s",s));
				else		System.out.print(String.format("%2s",""));
			}
			if(c=='J' || c=='Z') {
				if(j==3)	System.out.print(String.format("%2s",s));
				else		System.out.print(String.format("%2s",""));
			}
			if(c=='K') {
				if(j==0 || j==3)	System.out.print(String.format("%2s",s));
				else				System.out.print(String.format("%2s",""));
			}
			if(c=='M') {
				if(j==0 || j==2 || j==4)	System.out.print(String.format("%2s",s));
				else						System.out.print(String.format("%2s",""));
			}
			if(c=='N') {
				if(j==0 || j==1 || j==4)	System.out.print(String.format("%2s",s));
				else						System.out.print(String.format("%2s",""));
			}
			if(c=='X') {
				if(j==1 || j==3)	System.out.print(String.format("%2s",s));
				else				System.out.print(String.format("%2s",""));
			}
		}
	}
	
	public void display_2(char c) {
		int j;
		for(j=0;j<5;j++) {
			if(c=='A' || c=='E' || c=='F' || c=='H') {
				System.out.print(String.format("%2s",s));
			}
			if(c=='B' || c=='P' || c=='R') {
				if(j==0 || j==1 || j==2 || j==3)	System.out.print(String.format("%2s",s));
				else								System.out.print(String.format("%2s",""));
			}
			if(c=='C' || c=='L') {
				if(j==0)	System.out.print(String.format("%2s",s));
				else		System.out.print(String.format("%2s",""));
			}
			if(c=='D' || c=='O' || c=='U' || c=='V') {
				if(j==0 || j==4)	System.out.print(String.format("%2s",s));
				else				System.out.print(String.format("%2s",""));
			}
			if(c=='G') {
				if(j==0 || j==3 || j==4)	System.out.print(String.format("%2s",s));
				else						System.out.print(String.format("%2s",""));
			}
			if(c=='I' || c=='T' || c=='X' || c=='Z') {
				if(j==2)	System.out.print(String.format("%2s",s));
				else		System.out.print(String.format("%2s",""));
			}
			if(c=='J') {
				if(j==3)	System.out.print(String.format("%2s",s));
				else		System.out.print(String.format("%2s",""));
			}
			if(c=='K') {
				if(j==0 || j==1 || j==2)	System.out.print(String.format("%2s",s));
				else						System.out.print(String.format("%2s",""));
			}
			if(c=='M' || c=='N' || c=='Q' || c=='W') {
				if(j==0 || j==2 || j==4)	System.out.print(String.format("%2s",s));
				else						System.out.print(String.format("%2s",""));
			}
			if(c=='S') {
				if(j==1 || j==2 || j==3)	System.out.print(String.format("%2s",s));
				else						System.out.print(String.format("%2s",""));
			}
			if(c=='Y') {
				if(j==1 || j==2 || j==3 || j==4)	System.out.print(String.format("%2s",s));
				else								System.out.print(String.format("%2s",""));
			}
		}
	}
	
	public void display_3(char c) {
		int j;
		for(j=0;j<5;j++) {
			if(c=='A' || c=='B' || c=='D' || c=='G' || c=='H' || c=='M' || c=='O' || c=='U') {
				if(j==0 || j==4)	System.out.print(String.format("%2s",s));
				else				System.out.print(String.format("%2s",""));
			}
			if(c=='C' || c=='E' || c=='F' || c=='L' || c=='P') {
				if(j==0)	System.out.print(String.format("%2s",s));
				else		System.out.print(String.format("%2s",""));
			}
			if(c=='I' || c=='T') {
				if(j==2)	System.out.print(String.format("%2s",s));
				else		System.out.print(String.format("%2s",""));
			}
			if(c=='J' || c=='K' || c=='R') {
				if(j==0 || j==3)	System.out.print(String.format("%2s",s));
				else				System.out.print(String.format("%2s",""));
			}
			if(c=='N' || c=='Q') {
				if(j==0 || j==3 || j==4)	System.out.print(String.format("%2s",s));
				else						System.out.print(String.format("%2s",""));
			}
			if(c=='S' || c=='Y') {
				if(j==4)	System.out.print(String.format("%2s",s));
				else		System.out.print(String.format("%2s",""));
			}
			if(c=='V' || c=='X') {
				if(j==1 || j==3)	System.out.print(String.format("%2s",s));
				else				System.out.print(String.format("%2s",""));
			}
			if(c=='W') {
				if(j==0 || j==2 || j==4)	System.out.print(String.format("%2s",s));
				else						System.out.print(String.format("%2s",""));
			}
			if(c=='Z') {
				if(j==1)	System.out.print(String.format("%2s",s));
				else		System.out.print(String.format("%2s",""));
			}
		}
	}
	
	public void display_4(char c) {
		int j;
		for(j=0;j<5;j++) {
			if(c=='A' || c=='H' || c=='K' || c=='M' || c=='N' || c=='R' || c=='X') {
				if(j==0 || j==4)	System.out.print(String.format("%2s",s));
				else				System.out.print(String.format("%2s",""));
			}
			if(c=='B' || c=='D' || c=='S') {
				if(j==0 || j==1 || j==2 || j==3)	System.out.print(String.format("%2s",s));
				else								System.out.print(String.format("%2s",""));
			}
			if(c=='C' || c=='E' || c=='G' || c=='L' || c=='Q') {
				if(j==1 || j==2 || j==3 || j==4)	System.out.print(String.format("%2s",s));
				else								System.out.print(String.format("%2s",""));
			}
			if(c=='F' || c=='P') {
				if(j==0)	System.out.print(String.format("%2s",s));
				else		System.out.print(String.format("%2s",""));
			}
			if(c=='I' || c=='Z') {
				System.out.print(String.format("%2s",s));
			}
			if(c=='J') {
				if(j==1 || j==2)	System.out.print(String.format("%2s",s));
				else				System.out.print(String.format("%2s",""));
			}
			if(c=='T' || c=='V') {
				if(j==2)	System.out.print(String.format("%2s",s));
				else		System.out.print(String.format("%2s",""));
			}
			if(c=='O' || c=='U' || c=='W' || c=='Y') {
				if(j==1 || j==2 || j==3)	System.out.print(String.format("%2s",s));
				else						System.out.print(String.format("%2s",""));
			}
		}
	}
	
	public static void main(String []args) {
		Letter_ obj = new Letter_();
		obj.display();
	}
}
